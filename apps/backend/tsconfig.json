{
  "compilerOptions": {
    "target": "ES2020",     
    "module": "CommonJS",    
    "esModuleInterop": true, 
    "skipLibCheck": true,    
    "strict": true,          
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",      
    "rootDir": "./src",      
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],   
  "exclude": ["node_modules"]
}
